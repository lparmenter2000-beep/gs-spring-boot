pipeline {
    agent any

    stages {

        stage('Clone Repo') {
            steps {
                checkout scm
            }
        }

        stage('Build JAR') {
            steps {
                sh "cd initial && chmod +x mvnw"
                sh "cd initial && ./mvnw clean package"
            }
        }

        stage('Upload to Nexus') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'nexus-admin', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    sh """
                        curl -v -u $USERNAME:$PASSWORD \\
                        --upload-file initial/target/*.jar \\
                        http://localhost:8081/repository/maven-releases/com/example/springboot-helloworld/1.0.0/springboot-helloworld-1.0.0.jar
                    """
                }
            }
        }

        stage('Archive Artifact') {
            steps {
                archiveArtifacts artifacts: 'initial/target/*.jar', fingerprint: true
            }
        }
    }
}
